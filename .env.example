# Database
DATABASE_URL=postgres://later:later@localhost:5432/later?sslmode=disable
DATABASE_MAX_CONNECTIONS=100

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Scheduler (tiered polling)
SCHEDULER_HIGH_INTERVAL=2
SCHEDULER_NORMAL_INTERVAL=3
SCHEDULER_CLEANUP_INTERVAL=30

# Worker Pool
WORKER_POOL_SIZE=20

# Callback Security
CALLBACK_SECRET=change-this-in-production-use-openssl-rand-base64-32
CALLBACK_TIMEOUT=30
CALLBACK_MAX_RETRIES=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
