# Environment Variables for Later Task Service
# These variables override the values in config.yaml
#
# Usage:
# 1. Copy this file to .env: cp .env.example .env
# 2. Set LATER_CONFIG_FILE to your config path (optional, defaults to ./configs/config.yaml)
# 3. Override any config value using LATER_ prefix
#    Example: LATER_SERVER_PORT=9090 overrides server.port in config.yaml

# Configuration File Path (optional)
# LATER_CONFIG_FILE=./configs/config.yaml

# Server Configuration
LATER_SERVER_HOST=0.0.0.0
LATER_SERVER_PORT=8080

# Database Configuration
LATER_DATABASE_URL=postgres://later:later@localhost:5432/later?sslmode=disable
LATER_DATABASE_MAX_CONNECTIONS=100

# Scheduler Configuration (tiered polling)
LATER_SCHEDULER_HIGH_PRIORITY_INTERVAL=2s
LATER_SCHEDULER_NORMAL_PRIORITY_INTERVAL=3s
LATER_SCHEDULER_CLEANUP_INTERVAL=30s

# Worker Pool
LATER_WORKER_POOL_SIZE=20

# Callback Security
# IMPORTANT: Change CALLBACK_SECRET in production!
# Generate with: openssl rand -base64 32
LATER_CALLBACK_SECRET=change-this-in-production-use-openssl-rand-base64-32
LATER_CALLBACK_DEFAULT_TIMEOUT=30s
LATER_CALLBACK_DEFAULT_MAX_RETRIES=5

# Logging
LATER_LOG_LEVEL=info  # debug, info, warn, error
LATER_LOG_FORMAT=json # json or text
